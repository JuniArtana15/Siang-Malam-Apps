<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edtName"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="Nama"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:hint="Nama Makanan atau Minuman"
                android:inputType="textPersonName"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtName"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="Deskripsi"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignStart="@+id/edtName"
                android:layout_alignLeft="@+id/edtName"
                android:layout_alignEnd="@+id/edtName"
                android:layout_alignRight="@+id/edtName"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:hint="Deskripsi Makanan atau Minuman"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtStamp"
                android:layout_alignStart="@+id/edtStamp"
                android:layout_alignLeft="@+id/edtStamp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="Harga"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignEnd="@+id/edtStamp"
                android:layout_alignRight="@+id/edtStamp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:hint="Harga Makanan atau Minuman"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtDetail"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="Jumlah"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtStamp"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignEnd="@+id/edtName"
                android:layout_alignRight="@+id/edtName"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:hint="Jumlah Makanan atau Minuman"
                android:inputType="number" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="62dp">

                <RelativeLayout
                    android:layout_width="341dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:text="Gambar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@android:color/black" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="183dp"
                        android:layout_marginRight="183dp"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_input_add" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="20dp"
                android:layout_alignLeft="@+id/edtPrice"
                android:layout_alignStart="@+id/edtPrice"
                android:layout_below="@+id/edtPrice"
                android:layout_marginTop="10dp"
                android:background="#F0F3F6" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@+id/floatingActionButton"
                android:layout_alignStart="@+id/floatingActionButton"
                android:layout_alignLeft="@+id/floatingActionButton"
                android:layout_marginTop="16dp"
                android:text="Simpan"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>