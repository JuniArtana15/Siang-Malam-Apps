<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:layout_below="@+id/edtPrice"
                android:layout_alignStart="@+id/edtPrice"
                android:layout_alignLeft="@+id/edtPrice"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:background="#F0F3F6" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tName"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/edtName"
                        android:layout_alignLeft="@+id/edtName"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:text="Nama"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tStamp"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginBottom="3dp"
                        android:text="Jumlah"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tPrice"
                        android:layout_width="121dp"
                        android:layout_height="26dp"
                        android:layout_alignTop="@+id/tName"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="88dp"
                        android:layout_marginBottom="16dp"
                        android:text="Harga"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tDetail"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_below="@+id/edtName"
                android:layout_alignStart="@+id/edtDetail"
                android:layout_alignLeft="@+id/edtDetail"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="Deskripsi"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/tambahbasketnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Ke Basket" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>